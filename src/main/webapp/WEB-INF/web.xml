<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <servlet>
        <servlet-name>ControllerBusca</servlet-name>
        <servlet-class>tronkos.erik.trabalho2.ControllerBusca</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerBusca</servlet-name>
        <url-pattern>/busca</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerCatalogo</servlet-name>
        <servlet-class>tronkos.erik.trabalho2.ControllerCatalogo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerCatalogo</servlet-name>
        <url-pattern>/catalogo</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ControllerDelete</servlet-name>
        <servlet-class>tronkos.erik.trabalho2.ControllerDelete</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ControllerDelete</servlet-name>
        <url-pattern>/delete</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
